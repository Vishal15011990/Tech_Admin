    function countrychange() {
        var country = $(this).val();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetState","Employee_Master")',
            data: { 'Cid': country },
            success: function (data) {
                var state = $("#State");
                state.empty();
                state.append($('<option/>', {
                    Value: 0,
                    Text:"--Select State---"
                }));
                $.each(data, function (index, item) {
                    state.append($('<option/>', {
                        Value: item.Value,
                        Text: item.Text
                    }));
                });
            }
        });
    }




