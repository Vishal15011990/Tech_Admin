<table class="table style1 table-hover table-striped" id="mytable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Date_Of_Birth
            </th>
            <th>
                Phone
            </th>
            <th>
                Address
            </th>
            <th>
                EmailId
            </th>
            <th>
                Country
            </th>
            <th>
